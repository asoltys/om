<? require('connect.php') ?>
<?
  $result = mysql_query("
    SELECT amount, balance, created, with_account
    FROM om_repo
    WHERE trading_account = '" . mysql_real_escape_string($_GET['trading_account']) . "'
    ORDER BY created DESC");

  while($row = mysql_fetch_array($result)) {
    $debit = $credit = '';
    if ($row['amount'] > 0) {
      $credit = $row['amount'];
    } else {
      $debit = $row['amount'];
    }

    $t->transactions[] = array(
      'date'=> $row['created'], 
      'to'=> $row['with_account'],
      'credit'=> $credit, 
      'debit'=> $debit, 
      'balance'=> $row['balance']
    );
  }

  echo json_encode($t);
?>
